extends layout
block content
	script(type='text/javascript').
		function submitform()
		{	
			document.truckform.submit();
		}
		$( function() {
			$( "#tabs" ).tabs();
		} );
	if message
		script.
			swal("#{title}", "#{message}", "success");
	form(name='truckform', method='post', action='/config')
		header
			.container
				h1
					a(href='/') SP6 CS RPI
				span(style='margin-left: 40%')
					img(src='../images/logo.png', width='65px', style='margin-top:-8px')
				nav
					ul
						li
							a.icon.settings(href='/') Settings
						li
							a.icon.messages(href='/logout') Log Out
			// CONTAINER START
			.container-fluid.main
				.row
					.col-lg-6
						.box
							.checkout
								.checkout-header
									h1.checkout-title
										| Vehicle Type
										span.checkout-price 1
								p
									input.checkout-input.checkout-exp(type='text', name='Vehicle_Name', value=content.Vehicle_Name, placeholder='Vehicle Type Number')
									input.checkout-input.checkout-exp(type='text', name='Reg_Number', value=content.Reg_Number, placeholder='Registration Number')
						.box
							.checkout
								.checkout-header
									h1.checkout-title
										| Body Type
										span.checkout-price 2
								p
									input.checkout-input.checkout-name(type='text', name='beta', value=content.beta, placeholder='Beta value', autofocus='')
